<block>
    <scroll-view scroll-x="{{true}}" class="cate-sub-tab">
        <view wx:key="id" class="cate-sub-tab__item" bindtap="handleClick" wx:for="{{list}}" wx:for-item="item" wx:for-index="index" data-e-tap-so="this" data-e-tap-a-a="{{index}}"><text class="cate-sub-tab__item-txt">{{item.name}}</text>
            <block wx:if="{{index === current}}">
                <view class="cate-sub-tab__item-line"></view>
            </block>
        </view>
    </scroll-view>
</block>